<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:layout_margin="5dp"
        android:padding="7dp"
        android:id="@+id/user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_album_vignette"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:textColor="@color/_black"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/user_photo"
        android:text="Soldat Ryan" />

    <TextView
        android:id="@+id/user_followers_count"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:text="5000 followers" />

    <ImageButton
        android:id="@+id/playlist_moreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/ic_more_options_row"
        android:layout_marginEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/user_photo"
        android:background="@color/_purple"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>

</RelativeLayout>