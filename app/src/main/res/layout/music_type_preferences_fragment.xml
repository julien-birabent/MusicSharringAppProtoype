<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/music_type_preferences_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Select the types of music you want to hear"
        android:textAlignment="center"
        android:textColor="@color/_black"
        android:visibility="visible" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_below="@id/music_type_preferences_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_weight="5"
            android:id="@+id/music_type_preferences_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/_light_purple"
            android:layout_marginBottom="10dp"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/music_type_preferences_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/_yellow"
            android:text="@string/confirm_the_selection"
            android:textAlignment="center"
            android:textColor="@color/_black" />


    </LinearLayout>


</RelativeLayout>