<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_margin="5dp"
        android:padding="7dp"
        android:id="@+id/playlist_vignette"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/default_album_vignette"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:textColor="@color/_black"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/playlist_vignette"
        android:text="Playlist name" />

    <TextView
        android:id="@+id/playlist_number_of_songs"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playlist_name"
        android:layout_below="@+id/playlist_name"
        android:text="2 songs you never listened to" />

    <CheckBox
        android:id="@+id/add_to_playlist_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:focusable="false" />


</RelativeLayout>